{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"webpack": true
	},
	"projects": {
		"auth": {
			"type": "library",
			"root": "libs/auth",
			"entryFile": "index",
			"sourceRoot": "libs/auth/src",
			"compilerOptions": {
				"tsConfigPath": "libs/auth/tsconfig.lib.json"
			}
		},
		"jobs": {
			"type": "library",
			"root": "libs/jobs",
			"entryFile": "index",
			"sourceRoot": "libs/jobs/src",
			"compilerOptions": {
				"tsConfigPath": "libs/jobs/tsconfig.lib.json"
			}
		}
	}
}
