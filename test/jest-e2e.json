{
	"moduleFileExtensions": ["js", "json", "ts"],
	"rootDir": ".",
	"testEnvironment": "node",
	"testRegex": ".e2e-spec.ts$",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"moduleNameMapper": {
		"@app/auth": "<rootDir>/../libs/auth/src",
		"@app/auth/(.*)": "<rootDir>/../libs/auth/src/$1",
		"@app/jobs": "<rootDir>/../libs/jobs/src",
		"@app/jobs/(.*)": "<rootDir>/../libs/jobs/src/$1"
	}
}
